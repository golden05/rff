<!DOCTYPE html>
<html>
  <head>
    <title>Rff</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <% if user_signed_in?  %>
      <%= link_to "logout", logout_url, method: :delete %>
    <% end %>
  </body>
</html>
