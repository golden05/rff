<%= form_for user do |f| %>
  <% if admin_signed_in? %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  <% end %>
  <%= f.label :password  %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "submit" %>
<% end %>
